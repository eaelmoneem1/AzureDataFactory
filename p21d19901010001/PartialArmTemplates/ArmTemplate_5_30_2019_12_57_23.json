{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "p21d19901010001"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/HR_WORKDAY_DIVERSITY')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "FileShare",
					"type": "LinkedServiceReference"
				},
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "FileServerLocation",
						"fileName": {
							"value": "@concat ('PersonalData_' , formatDateTime(utcnow(), 'yyyy'), formatDateTime(utcnow(), 'MM'), formatDateTime(utcnow(), 'dd'),'.csv')",
							"type": "Expression"
						},
						"folderPath": "CEOCFO/HR"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/HR_WORKDAY_DIVERSITY_ARCH_DEST')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureDataLakeStore",
					"type": "LinkedServiceReference"
				},
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureDataLakeStoreLocation",
						"fileName": {
							"value": "@concat ('PersonalData_' , formatDateTime(utcnow(), 'yyyy'), formatDateTime(utcnow(), 'MM'), formatDateTime(utcnow(), 'dd'))",
							"type": "Expression"
						},
						"folderPath": "LandingArchive/CEOCFO/HR"
					},
					"columnDelimiter": ",",
					"compressionCodec": "gzip",
					"compressionLevel": "Optimal",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "Location",
						"type": "String"
					},
					{
						"name": "Responses",
						"type": "String"
					},
					{
						"name": "Detractors_Percentage",
						"type": "String"
					},
					{
						"name": "Passives_Percentage",
						"type": "String"
					},
					{
						"name": "Promoters_Percentage",
						"type": "String"
					},
					{
						"name": "Score",
						"type": "String"
					},
					{
						"name": "Avg_Response",
						"type": "String"
					},
					{
						"name": "Response_Distribution_0",
						"type": "String"
					},
					{
						"name": "Response_Distribution_1",
						"type": "String"
					},
					{
						"name": "Response_Distribution_2",
						"type": "String"
					},
					{
						"name": "Response_Distribution_3",
						"type": "String"
					},
					{
						"name": "Response_Distribution_4",
						"type": "String"
					},
					{
						"name": "Response_Distribution_5",
						"type": "String"
					},
					{
						"name": "Response_Distribution_6",
						"type": "String"
					},
					{
						"name": "Response_Distribution_7",
						"type": "String"
					},
					{
						"name": "Response_Distribution_8",
						"type": "String"
					},
					{
						"name": "Response_Distribution_9",
						"type": "String"
					},
					{
						"name": "Response_Distribution_10",
						"type": "String"
					}
				]
			}
		}
	]
}